<ul class="list-group">
<% @users.each do |user| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <h5><%= user.firstname+" "+user.lastname %></h5>
    <%= user.email %>
    <a class="badge" href="<%= edit_user_path(user.id) %>">
      <span class="glyphicon">&#xe065;</span>
    </a>
  </li>
<% end %>
</ul>
