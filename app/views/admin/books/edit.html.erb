<div class="row">
  <div class="col-sm-6">
    <% if @book.errors.any? %>
      <div class="alert alert-warning">
        <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h2>Edit Profile</h2>
    <%= form_for @book, url: admin_book_path do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :author %>
        <%= form.text_field :author, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :isbn, "ISBN" %>
        <%= form.number_field :isbn, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.select :category_id, Category.all.pluck(:name, :id), {}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit('Update Book', class: 'btn btn-primary') %>
      </div> 
    <% end %>
  </div>
</div>