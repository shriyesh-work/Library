<div class="row">
  <div class="col-sm-6">
  <h1>Book Info</h1>
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th scope="row">Name</th>
        <td><%= @book.name %></td>
      </tr>
      <tr>
        <th scope="row">Author</th>
        <td><%= @book.author %></td>
      </tr>
      <tr>
        <th scope="row">ISBN</th>
        <td><%= @book.isbn %></td>
      </tr>
      <tr>
        <th scope="row">Category</th>
        <td><%= @book.category.name %></td>
      </tr>
    </tbody>
    
  </table>
  <%= link_to "Edit Book Info", edit_book_path, class: 'btn btn-primary' %>
</div>
</div>