<div class="row">
  <div class="col-sm-6">
    <h2>Sign Up</h2>
    <br>
    <% if @user.errors.any? %>
      <div class="alert alert-warning">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for @user, url: user_path do |form| %>
      <div class="form-group">
        <%= label(:user, :firstname) %>
        <%= text_field(:user, :firstname, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= label(:user, :lastname) %>
        <%= text_field(:user, :lastname, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= label(:user, :email) %>
        <%= text_field(:user, :email, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= label(:user, :password) %>
        <%= password_field(:user, :password, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= label(:user, :password_confirmation, 'Confirm Password') %>
        <%= password_field(:user, :password_confirmation, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= submit_tag('Sign Up', class: 'btn btn-primary') %>
      </div> 
    <% end %>
  </div>
</div>
