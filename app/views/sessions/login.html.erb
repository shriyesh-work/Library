<div class="row">
  <div class="col-sm-6">
    <h2>Login</h2> 
    <br>
    <% if flash[:error] %>
      <div class="alert alert-warning">
        <%= flash[:error] %>
      </div>
    <% end %> 
    <%= form_tag(action: "login") do %>
      <div class="form-group"> 
        <%= label(:user, :email) %>
        <%= email_field(:user, :email, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= label(:user, :password) %>
        <%= password_field(:user, :password, class: 'form-control') %> 
      </div>
      <div class="form-group">
        <%= submit_tag("Login", class: 'btn btn-primary') %>
      </div>
    <% end %>
  </div>
</div>