<h2>Login</h2> 
<% if flash[:alert] %>
  <div class="alert alert-warning">
    <%= flash[:alert] %>
  </div>
<% end %> 
<%= form_tag(action: "login", url: {method: "post"}) do %>
  <div class="form-group"> 
  	 <%= label(:user, :email) %>
  	 <%= email_field :user, :email, class: 'form-control' %>
  </div>
  <div class="form-group">
  	 <%= label(:user, :password) %>
  	 <%= password_field :user, :password, class: 'form-control' %> 
  </div>
  <%= submit_tag :login, class: 'btn btn-default' %>
<% end %>
