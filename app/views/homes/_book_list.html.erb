<% if @books.count < 1 %>
<h5>Couldn't find anything, Try searching something else</h5>
<% else %>
  <ul class="list-group">
  <% @books.each do |book| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <h5><%= book.name %></h5>
      <h6><%= book.author %></h6>
      <%= book.category.name %>
      <a class="badge" href="<%= book_path book.isbn %>">
        <span class="glyphicon glyphicon-book"></span>
      </a>
    </li>
  <% end %>
  </ul>
<% end %>